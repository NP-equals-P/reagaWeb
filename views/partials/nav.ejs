<style>
    .nav {
        background-color: rgb(108, 140, 151);
        margin: 0;
        padding: 0;
        height: 8vh;
        text-align: right;
    }

    .dropMenuButton {
        background-color: rgb(184, 184, 184);
        width: 8vh;
        height:8vh;
        text-align: center;
        cursor: pointer;
    }

    .dropMenuButton:hover {
        background-color: rgb(218, 218, 218);
    }

    .dropdown-content {
        display: none;
        position: relative;
        background-color: #f1f1f1;
        width: 12vw;
        left: 88vw;
        overflow: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {background-color: #868686;}

    .show {display: block;}

    .userIcon {
        height: 5vh;
        width: 5vh;
    }

    .usernameSpan {
      position: absolute;
      top: 2.5vh;
      right: 5vw;
      font-weight: bold;
      color: wheat;
    }
</style>

<div class="nav">
    <span class="usernameSpan"><%= name %></span>
    <button class="dropMenuButton" onclick="myFunction()">
        <img class="userIcon" src="./pictures/userDefaultIcon.png" alt="" onclick="">
    </button>
    <div id="myDropdown" class="dropdown-content">
        <a href="/login">log out</a>
        <a href="/api/user/deleteUser?_id=<%= _id %>">delete user</a>
        <!-- <a href="#about">About</a>
        <a href="#contact">Contact</a> -->
      </div>
</div>

<script>
    function myFunction() {
      document.getElementById("myDropdown").classList.toggle("show");
      console.log("clicou")
    }

    window.onclick = function(event) {
      if (!event.target.matches('.dropMenuButton') && !event.target.matches('.userIcon')) {
        // console.log("Entrou")
        var dropdowns = document.getElementsByClassName("dropdown-content");
        var i;
        for (i = 0; i < dropdowns.length; i++) {
          var openDropdown = dropdowns[i];
          if (openDropdown.classList.contains('show')) {
            openDropdown.classList.remove('show');
          }
        }
      }
    }
</script>